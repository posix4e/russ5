# The URL of your private certificates repository
# This can be overridden by setting the MATCH_GIT_URL environment variable
# Ensure the URL is in SSH format (git@github.com:username/repo.git)
git_url(ENV["MATCH_GIT_URL"])

storage_mode("git")

# Use SSH for git authentication
git_basic_authorization(nil) # Disable basic auth
git_ssh_command("ssh -i ~/.ssh/id_ed25519 -o IdentitiesOnly=yes")

# The default type, can be: appstore, adhoc, enterprise or development
type("development") 

# App identifiers to include in the provisioning profile
app_identifier(["xyz.russ.russ5", "xyz.russ.russ5.Extension"])

# Your Apple Developer Portal username
# This can be overridden by setting the FASTLANE_APPLE_ID environment variable
username(ENV["FASTLANE_APPLE_ID"]) 

# Team ID from the Apple Developer Portal
# This can be overridden by setting the TEAM_ID environment variable
team_id(ENV["TEAM_ID"])

# Set to readonly in CI environments to prevent creating new certificates
readonly(ENV["CI"] == "true")

# The docs are available on https://docs.fastlane.tools/actions/match/
